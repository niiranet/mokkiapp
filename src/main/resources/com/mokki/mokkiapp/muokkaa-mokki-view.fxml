<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mokki.mokkiapp.MuokkaaMokkiController">
    <children>
        <Label text="Muokkaa mökkiä" />
        <TextField fx:id="nimiField" promptText="Nimi" />
        <TextField fx:id="osoiteField" promptText="Katuosoite" />
        <TextField fx:id="postinumeroField" promptText="Postinumero" />
        <TextField fx:id="hintaField" promptText="Hinta" />
        <TextField fx:id="kuvausField" promptText="Kuvaus" />
        <HBox alignment="CENTER" spacing="10">
            <children>
                <Button onAction="#handleTallenna" text="Tallenna" />
                <Button onAction="#handlePeruuta" text="Peruuta" />
            </children>
        </HBox>
    </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
